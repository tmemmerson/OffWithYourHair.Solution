@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add new client</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)<br>
  @Html.TextBoxFor(model => model.Name, new {@class ="", required="required"})
<br>
  @Html.LabelFor(model => model.Notes)<br>
  @Html.TextBoxFor(model => model.Notes)
<br>
  @Html.LabelFor(model => model.Stylist)<br>
  @Html.DropDownList("StylistId")
<br>
  <input type="submit" value="Add new client" class="btn btn-default" />
}

<p>@Html.ActionLink("Show all clients", "Index")</p>