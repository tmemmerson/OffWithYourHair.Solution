@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add new client</h4>

@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.LabelFor(model => model.Name)<br>
    @Html.TextBoxFor(model => model.Name, new {@class ="form-control"})
    <br>
    @Html.LabelFor(model => model.Note)<br>
    @Html.TextBoxFor(model => model.Note)
    <br>
    @Html.LabelFor(model => model.Stylist)<br>
    @Html.DropDownList("StylistId")
    <br>
  </div>
  <input type="submit" value="Add new client" class="btn btn-default" />
}

<p>@Html.ActionLink("Show all clients", "Index")</p>