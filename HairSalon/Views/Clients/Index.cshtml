@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>You have no clients presently.</h3>
}

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId})</li>
}

<p>@Html.ActionLink("Add new", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
